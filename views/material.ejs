        <div class="modal" id="modal-novo-material">
            <div class="modal-background"></div>
            <div class="modal-card">
                <header class="modal-card-head">
                    <p class="modal-card-title">Cadastro de Material</p>
                    <button class="delete" aria-label="close" id="close"></button>
                </header>

                <section class="modal-card-body">
                    <form action="/materiais" method="post">
                        <div class="field">
                            <label for="nome-material" class="label">
                                Nome *
                            </label>
                            <div class="control">
                                <input type="text" class="input" id="nome-material" maxlength="80"
                                    placeholder="Digite o nome" name="nomeMaterial" required>
                            </div>
                        </div>

                        <div class="field">
                            <label for="marca-material" class="label">
                                Marca
                            </label>
                            <div class="control">
                                <input type="text" class="input" id="marca-material" maxlength="25"
                                    placeholder="Digite a marca" name="marcaMaterial" value="Sem marca">
                            </div>

                            <label for="modelo-material" class="label">
                                Modelo
                            </label>
                            <div class="control">
                                <input type="text" class="input" id="modelo-material" maxlength="25"
                                    placeholder="Digite o modelo" name="modeloMaterial" disabled>
                            </div>
                        </div>

                        <div class="field">
                            <label class="label" for="tipo-material">Tipo de Material</label>
                            <div class="control">
                                <div class="select">
                                    <select id="tipo-material">
                                        <option value="pc" selected>Computador</option>
                                        <option value="key">Teclado</option>
                                        <option value="mo">Mouse</option>
                                        <option value="up">UPS</option>
                                        <option value="other">Outro</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!--   <div class="field">
                            <label for="quant-material" class="label">
                                Quantidade *
                            </label>
                            <div class="control">
                                <input type="number" class="input" id="quant-material" min="1" max="99"
                                    placeholder="Digite a quantidade" name="quantMaterial" required>
                            </div>
                            <label for="data-compra" class="label">
                                Data de Compra
                            </label>

                            <div class="control">
                                <input type="date" class="input" id="data-compra" name="dataCompra">
                            </div>
                        </div> -->

                        <div class="field">
                            <label for="estado-material" class="label">
                                Estado
                            </label>
                            <div class="control">
                                <input type="radio" class="radio" id="rd-danificado" name="estadoMaterial">
                                <span>Danificado</span>

                                <input type="radio" class="radio" id="rd-bom" name="estadoMaterial" checked>
                                <span>Bom</span>

                                <input type="radio" class="radio" id="rd-rasoavel" name="estadoMaterial">
                                <span>Rasoável</span>
                            </div>
                        </div>

                        <div class="field">
                            <label for="capacidade" class="label">Capacidade *</label>
                            <div class="control">
                                <input type="text" class="input" id="capacidade"
                                    placeholder="Ex.: Ram de 4gb processador intel 2.4GHz HDD 500Gb" maxlength="45"
                                    required>
                            </div>
                        </div>

                        <div class="field">
                            <label for="estado-material" class="label">
                                Tem programas
                            </label>
                            <div class="control">
                                <input type="radio" class="radio" id="rd-sim" name="temPrograma" checked>
                                <span>Sim</span>


                                <input type="radio" class="radio" id="rd-nao" name="temPrograma">
                                <span>Não</span>
                            </div>
                        </div>

                        <div class="field">
                            <label for="mesa" class="label">Nº Mesa *</label>
                            <div class="control">
                                <input type="number" class="input" id="mesa" placeholder="Digite o número da mesa"
                                    required>
                            </div>
                        </div>

                        <div class="field">
                            <label class="label">Observações</label>
                            <div class="control">
                                <textarea class="textarea" placeholder="Ex.: Este material é....." rows="1"
                                    autocomplete="on"></textarea>
                            </div>
                        </div>
                    </form>

                </section>

                <footer class="modal-card-foot">
                    <button type="submit" class="button is-primary" id="btnGuardar">Guardar</button>
                    <button type="reset" class="button" id="btnCancelar">Cancelar</button>
                </footer>
            </div>
        </div>

